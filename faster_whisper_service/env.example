# Faster Whisper Service Configuration

# API Token (not required - authentication is disabled)
# FASTER_WHISPER_API_TOKEN=

# Require Authentication (true/false)
FASTER_WHISPER_REQUIRE_AUTH=false

# Service Configuration
FASTER_WHISPER_ENABLED=true
FASTER_WHISPER_URL=https://alaaharoun-faster-whisper-api.hf.space

# Model Configuration
FASTER_WHISPER_MODEL_SIZE=base
FASTER_WHISPER_COMPUTE_TYPE=int8

# Performance Settings
FASTER_WHISPER_MAX_FILE_SIZE=26214400  # 25MB in bytes
FASTER_WHISPER_REQUEST_TIMEOUT=30000   # 30 seconds
FASTER_WHISPER_UPLOAD_TIMEOUT=60000    # 60 seconds 